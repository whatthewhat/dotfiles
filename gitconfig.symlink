[user]
  name = Mikhail Topolskiy
  email = mikhail.topolskiy@gmail.com
[credential]
  helper = osxkeychain
[push]
  default = simple
[alias]
  cb = symbolic-ref HEAD --short

  sb = !ls .git/refs/remotes/*/$(git cb) | cut -d/ -f4,5 | \
        xargs git show-branch $(git cb)
[tag]
  sort = version:refname
[color]
  ui = auto
[init]
  defaultBranch = main
[rerere]
  enabled = true
[column]
  ui = auto
[branch]
  sort = -committerdate
